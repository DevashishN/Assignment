
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/Register.css">
    <script type="text/javascript" src="~/Scripts/RegisterIndex.js"></script>
    <title>Register</title>
</head>
<body>
    <div class="login-page">
        <div class="form">
            <form onsubmit="registerUser()" class="login-form" method="post">
                <h1>Register</h1>
                <input id="emailAddress" type="email" placeholder="Email" required />
                <input id="password" type="password" minlength="5" placeholder="Password" required />
                <small>Format: al*zbest#</small><br><br>
                <input id="confirmpassword" type="password" placeholder=" confrim Password" required />

                <input class="submitBtn" type="submit"></input>
                <p class="message">Already registered? <a href="/Login">Go to Login</a></p>
            </form>
        </div>
    </div>
</body>
</html>

